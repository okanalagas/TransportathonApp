                }

        .arc_dis {
            left: calc(50% - 25px);
            top: calc(50% - 25px);
            width: 58px;
            height: 58px;
        }

            .arc_dis:before {
                content: "";
                width: 4px;
                height: 4px;
                left: calc(50% - 2px);
            }

        .arc {
            margin: 0;
            width: 50px;
            height: 50px;
            padding: 0;
