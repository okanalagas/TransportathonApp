    <style>
        .site_loading {
            height: 100%;
            width: 100%;
            position: fixed;
            z-index: 9999999999999999999999999999;
            left: 0;
            top: 0;
            font-size: 150px;
            display: none
        }

        .arc, .arc_dis {
            position: absolute
        }

            .arc_dis, .arc_dis:before {
                z-index: 999999999999999999999999999999
            }

